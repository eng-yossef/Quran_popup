{
  "manifest_version": 3,
  "name": "Quran Ayah Looper",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": { "default_popup": "popup.html", "default_icon": "icon.png" },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"] }
  ]
}
